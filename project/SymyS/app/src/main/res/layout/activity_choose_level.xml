<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/button"
        android:overScrollMode="never"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:text=""
        android:background="@drawable/choolsetitle"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:text=""
        android:id="@+id/chooseBtLeft"
        android:background="@drawable/chooselevelleft"
        android:layout_alignTop="@+id/viewpager"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp" />

    <Button
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:text=""
        android:id="@+id/chooseBtRight"
        android:background="@drawable/chooselevelright"
        android:layout_alignTop="@+id/chooseBtLeft"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
